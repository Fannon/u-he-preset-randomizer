  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "tsx",
      "runtimeExecutable": "node",
      // "args": ["src/cli.ts", "--synth", "Diva", "--merge", "BS Deep Space Diva", "--merge", "HS Strumpet", "--merge", "HS Baroqualog"],
      // "args": ["src/cli.ts", "--synth", "Hive", "--pattern", "**/PD *", "--debug"],
      // "args": ["src/cli.ts", "--synth", "Hive", "--pattern", "**/PD *", "--merge", ],
      "args": ["src/cli.ts", "--synth", "Repro-5", "--amount", "4", "--stable"],
      // "args": ["src/cli.ts"],
      "runtimeArgs": [
        "--import",
        "tsx/esm"
      ],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}
